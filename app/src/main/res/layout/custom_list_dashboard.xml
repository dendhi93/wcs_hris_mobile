<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_custom_dashboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/space_07"
    android:layout_marginBottom="@dimen/space_07"
    app:cardElevation="@dimen/card_view_elevation"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/card_view_background"
    app:cardCornerRadius="@dimen/card_view_radius">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_custom_dash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/space_06"
            android:paddingVertical="@dimen/space_04"
            android:textSize="@dimen/card_view_title_text_size"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_01"
            android:background="@color/colorGray400" />

        <TextView
            android:id="@+id/tv_custom_dash_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/space_06"
            android:paddingVertical="@dimen/space_06"
            android:textSize="@dimen/card_view_detail_text_size" />

    </LinearLayout>


</androidx.cardview.widget.CardView>