<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.wcs.mobilehris.feature.approvallistofactivities.detail.DetailApprovalViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/backgroundApp">

        <ProgressBar
            android:id="@+id/pb_actiApprovalTransation"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:visibility="@{viewModel.isProgressActiApprovalTrans ? View.VISIBLE : View.GONE}"
            android:layout_height="@dimen/permission_button_margin_vertical"
            android:indeterminate="true" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/cv_reqTravel_top"
            app:cardCornerRadius="10dp"
            app:cardElevation="1dp"
            android:layout_margin="@dimen/spacing_tiny_2"
            android:elevation="2dp"
            app:cardMaxElevation="1dp"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/cardview_light_background"
            tools:ignore="PrivateResource"
            android:visibility="@{viewModel.isHiddenContent ? View.GONE : View.VISIBLE}"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/spacing_tiny_2">

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_fields_height"
                    android:layout_marginStart="@dimen/spacing_tiny_3"
                    android:layout_marginEnd="@dimen/spacing_tiny_3"
                    android:layout_marginBottom="@dimen/spacing_tiny_3"
                    app:boxCornerRadiusBottomEnd="@dimen/text_fields_radius"
                    app:boxCornerRadiusBottomStart="@dimen/text_fields_radius"
                    app:boxCornerRadiusTopEnd="@dimen/text_fields_radius"
                    app:boxCornerRadiusTopStart="@dimen/text_fields_radius"
                    app:boxStrokeColor="@color/text_fields_box_color"
                    app:boxStrokeWidth="@dimen/text_fields_box_width">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_activity_approval_charge_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789qwertyuiopasdfghjklzxcvbnm/_-,.()!? "
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="@string/charge_code"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={viewModel.stChargeCode}"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/text_fields_text_size" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_fields_height"
                    android:layout_marginStart="@dimen/spacing_tiny_3"
                    android:layout_marginEnd="@dimen/spacing_tiny_3"
                    android:layout_marginBottom="@dimen/spacing_tiny_3"
                    app:boxCornerRadiusBottomEnd="@dimen/text_fields_radius"
                    app:boxCornerRadiusBottomStart="@dimen/text_fields_radius"
                    app:boxCornerRadiusTopEnd="@dimen/text_fields_radius"
                    app:boxCornerRadiusTopStart="@dimen/text_fields_radius"
                    app:boxStrokeColor="@color/text_fields_box_color"
                    app:boxStrokeWidth="@dimen/text_fields_box_width">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_activity_approval_nik"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789qwertyuiopasdfghjklzxcvbnm/_-,.()!? "
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="@string/nik"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={viewModel.stNik}"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/text_fields_text_size" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_fields_height"
                    android:layout_marginStart="@dimen/spacing_tiny_3"
                    android:layout_marginEnd="@dimen/spacing_tiny_3"
                    android:layout_marginBottom="@dimen/spacing_tiny_3"
                    app:boxCornerRadiusBottomEnd="@dimen/text_fields_radius"
                    app:boxCornerRadiusBottomStart="@dimen/text_fields_radius"
                    app:boxCornerRadiusTopEnd="@dimen/text_fields_radius"
                    app:boxCornerRadiusTopStart="@dimen/text_fields_radius"
                    app:boxStrokeColor="@color/text_fields_box_color"
                    app:boxStrokeWidth="@dimen/text_fields_box_width">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_activity_approval_employee"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789qwertyuiopasdfghjklzxcvbnm/_-,.()!? "
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="@string/employee_name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={viewModel.stName}"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/text_fields_text_size" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_fields_height"
                    android:layout_marginStart="@dimen/spacing_tiny_3"
                    android:layout_marginEnd="@dimen/spacing_tiny_3"
                    android:layout_marginBottom="@dimen/spacing_tiny_3"
                    app:boxCornerRadiusBottomEnd="@dimen/text_fields_radius"
                    app:boxCornerRadiusBottomStart="@dimen/text_fields_radius"
                    app:boxCornerRadiusTopEnd="@dimen/text_fields_radius"
                    app:boxCornerRadiusTopStart="@dimen/text_fields_radius"
                    app:boxStrokeColor="@color/text_fields_box_color"
                    app:boxStrokeWidth="@dimen/text_fields_box_width">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_activity_approval_available"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789qwertyuiopasdfghjklzxcvbnm/_-,.()!? "
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="@string/available"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={viewModel.stAvailable}"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/text_fields_text_size" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_fields_height"
                    android:layout_marginStart="@dimen/spacing_tiny_3"
                    android:layout_marginEnd="@dimen/spacing_tiny_3"
                    android:layout_marginBottom="@dimen/spacing_tiny_3"
                    app:boxCornerRadiusBottomEnd="@dimen/text_fields_radius"
                    app:boxCornerRadiusBottomStart="@dimen/text_fields_radius"
                    app:boxCornerRadiusTopEnd="@dimen/text_fields_radius"
                    app:boxCornerRadiusTopStart="@dimen/text_fields_radius"
                    app:boxStrokeColor="@color/text_fields_box_color"
                    app:boxStrokeWidth="@dimen/text_fields_box_width">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_activity_approval_date_from"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789qwertyuiopasdfghjklzxcvbnm/_-,.()!? "
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="@string/date_from"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={viewModel.stDateFrom}"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/text_fields_text_size" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_fields_height"
                    android:layout_marginStart="@dimen/spacing_tiny_3"
                    android:layout_marginEnd="@dimen/spacing_tiny_3"
                    android:layout_marginBottom="@dimen/spacing_tiny_3"
                    app:boxCornerRadiusBottomEnd="@dimen/text_fields_radius"
                    app:boxCornerRadiusBottomStart="@dimen/text_fields_radius"
                    app:boxCornerRadiusTopEnd="@dimen/text_fields_radius"
                    app:boxCornerRadiusTopStart="@dimen/text_fields_radius"
                    app:boxStrokeColor="@color/text_fields_box_color"
                    app:boxStrokeWidth="@dimen/text_fields_box_width">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_activity_approval_date_into"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789qwertyuiopasdfghjklzxcvbnm/_-,.()!? "
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="@string/date_into"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={viewModel.stDateInto}"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/text_fields_text_size" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/text_fields_height"
                    android:layout_marginStart="@dimen/spacing_tiny_3"
                    android:layout_marginEnd="@dimen/spacing_tiny_3"
                    android:layout_marginBottom="@dimen/spacing_tiny_3"
                    app:boxCornerRadiusBottomEnd="@dimen/text_fields_radius"
                    app:boxCornerRadiusBottomStart="@dimen/text_fields_radius"
                    app:boxCornerRadiusTopEnd="@dimen/text_fields_radius"
                    app:boxCornerRadiusTopStart="@dimen/text_fields_radius"
                    app:boxStrokeColor="@color/text_fields_box_color"
                    app:boxStrokeWidth="@dimen/text_fields_box_width">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txt_activity_approval_created_by"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789qwertyuiopasdfghjklzxcvbnm/_-,.()!? "
                        android:enabled="false"
                        android:gravity="center_vertical"
                        android:hint="@string/created_by"
                        android:inputType="text"
                        android:maxLines="1"
                        android:text="@={viewModel.stCreatedBy}"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:textSize="@dimen/text_fields_text_size" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:onClick="@{() -> viewModel.clickActivityRejection()}"
                        android:id="@+id/btn_dtlReqTravel_reject"
                        android:layout_width="0dp"
                        android:layout_marginHorizontal="@dimen/spacing_tiny_3"
                        android:layout_height="@dimen/button_height"
                        android:layout_weight="1"
                        android:text="@string/reject"
                        android:background="@drawable/bg_transparent_button"/>

                    <Button
                        style="?android:attr/buttonBarButtonStyle"
                        android:id="@+id/btn_leaveTrans_save"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/button_height"
                        android:textColor="@color/colorWhite"
                        android:onClick="@{() -> viewModel.clickActivityApproval()}"
                        android:text="@string/approve"
                        android:layout_marginHorizontal="@dimen/spacing_tiny_3"
                        android:background="@drawable/bg_blue_button"/>

                </LinearLayout>
            </LinearLayout>

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <include layout="@layout/custom_bottom_sheet_reject"/>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>
